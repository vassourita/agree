{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build_accord",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/apps/accord/src/Agree.Accord.Presentation/Agree.Accord.Presentation.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish_accord",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/apps/accord/src/Agree.Accord.Presentation/Agree.Accord.Presentation.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch_accord",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/apps/accord/src/Agree.Accord.Presentation/Agree.Accord.Presentation.csproj"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}