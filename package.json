{
  "name": "agree",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/vassourita/agree.git",
  "author": "Vinicius Vassao <vlviniciusguaruja7@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "test": "jest --passWithNoTests --no-cache --verbose --detectOpenHandles --forceExit",
    "test:cov": "jest --passWithNoTests --no-cache --coverage --detectOpenHandles --forceExit",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "test:badges": "npm run test:cov && jest-coverage-badges --output \"./.github/assets/\"",
    "docker-up": "cd docker && docker-compose up -d",
    "docker-down": "cd docker && docker-compose down",
    "accord:dev": "cd apps/accord && yarn migrate:run && yarn start:dev"
  },
  "workspaces": {
    "packages": [
      "apps/*",
      "libs/*",
      "config/*"
    ],
    "nohoist": [
      "accord/sqlite3"
    ]
  },
  "devDependencies": {
    "@agree/config-eslint": "*",
    "@agree/config-prettier": "*",
    "@types/jest": "^26.0.10",
    "coveralls": "^3.1.0",
    "jest": "^26.4.0",
    "jest-coverage-badges": "vassourita/jest-coverage-badges",
    "sqlite3": "^5.0.0",
    "ts-jest": "^26.2.0",
    "typescript": "^3.9.7"
  }
}
